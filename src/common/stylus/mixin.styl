border-1px($color)
  position: relative
  &::after
    display: block
    content: ''
    position: absolute
    width: 100%
    left: 0
    bottom: 0
    border-top: 1px solid $color


bg-image($name)
  background-image: url('./'+ $name +'@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-device-pixel-ratio: 3)
    background-image: url('./'+ $name +'@3x.png')

